pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'Building application...'
        sh 'date'
        sh 'sleep 2'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing application...'
        sh 'date'
        sh 'sleep 2'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying application...'
        sh 'date'
        sh 'sleep 2'
      }
    }
  }
}